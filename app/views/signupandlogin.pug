html
  head
    title #{title}
    meta(chartset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="shortcut icon", href="/images/favicon.png", type="image/x-icon")
    link(rel='stylesheet' href='/stylesheets/signupandlogin.css')

    body
    .container
        img(src="/images/side_image.png" alt="expenseTracker-back-button" class="side-image")
        .right-container
            if current_view === "signup"
                .sign-up-container
                    .sign-up-container-back-button-and-title 
                        a(href="/landing_page")
                            img(src="/images/back-button.svg" alt="expenseTracker-back-button" class="back-button")
                        h1.sign-up-title Welcome to ExpenseTracker
                        form(method="POST" class="sign-up-form")
                            .detail
                                label(for="name", class="label") Firstname
                                input(type="text", name="FirstName", id="FirstName", class="input" required)
                            .detail
                                label(for="name", class="label") Lastname
                                input(type="text", name="LastName", id="LastName", class="input" required)
                            .detail
                                label(for="name", class="label") Date of Birth
                                input(type="date", name="DateOfBirth", id="DateOfBirth", class="input" required)
                            .detail
                                label(for="user-name", class="label") Username
                                input(type="text", name="Username", id="Username", class="input" required)
                            .detail
                                label(for="email", class="label") Email
                                input(type="email", name="Email", id="Email", class="input" required)
                            .detail
                                label(for="password", class="label") Password
                                input(type="password", name="Password", id="Password", class="input" required)
                            .button-and-text-container
                                //-a(href="/home" class="sign-up-login-button") Create Account
                                button(type="submit" class='sign-up-login-button') Sign Up!
                                .texts 
                                    p.main-text Already have an account?
                                    a(href="/auth/login")
                                        p.sub-text Log In


                            if errors
                                div.errors
                                    p= errors

            else if current_view === "login"
                .login-container
                    .login-container-back-button-and-title 
                        a(href="/landing_page")
                            img(src="/images/back-button.svg" alt="expenseTracker-back-button" class="back-button")
                        h1.login-title Welcome to ExpenseTracker
                        form(method="POST" class="login-form")
                            .detail
                                label(for="email", class="label") Email
                                input(type="email", name="email", id="email", class="input", value=email?email:"" required)
                            .detail
                                label(for="password", class="label") Password
                                input(type="password", name="password", id="password", class="input" required)
                            .button-and-text-container
                                //-a(href="/home" class="sign-up-login-button") Log In
                                button(type="submit" class='sign-up-login-button') Log In
                                .texts 
                                    p.main-text Don't have an account?
                                    a(href="/auth/signup")
                                        p.sub-text Sign Up
                
                if errors
                    div.errors
                        p= errors
                                            



